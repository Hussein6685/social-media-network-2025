<% @users.each do |user| %>
    <div class="flex user-card justify-between  p-4 mx-auto my-5 max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <h2 class="text-lg font-semibold inline-block"><a href="<%= user_profile_path(user.id) %>"> <%= user.username %></a></h2>
        <br>
        <% if user.followers.select { |relationship| relationship.follower_id == current_user.id}.count > 0 %>
            <form class="inline-block" action="/user/unfollow" method="post">
                <input type="hidden" name="followed_id" value="<%= user.id %>">
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"> <%= t('unfollow') %> </button>
            </form>
        <% else %>
            <form action="/user/follow" method="post">
                <input type="hidden" name="followed_id" value="<%= user.id %>">
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"> <%= t('follow') %> </button>
            </form>
        <% end %>
    </div>
<% end %>

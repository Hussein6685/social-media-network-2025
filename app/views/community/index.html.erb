<div class="container mx-auto p-4">
    <div class="p-6 mx-auto my-5 max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <form enctype="multipart/form-data"  class="space-y-4" action="/community/create" method="post">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= t('create_new_community') %></h5>
            <input class="border border-gray-300 rounded-lg p-2 w-full mb-2" type="text" name="name" placeholder="<%= t('community_name') %>">
            <input class="border border-gray-300 rounded-lg p-2 w-full mb-2" type="file" name="image"%>
            <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
            type="submit"><%= t('create_community') %></button>
        </form>
    </div>
</div>

<div class="grid grid-cols-4 gap-4">
        <% @communities.each do |community| %>
            <div class="col-span-4 sm:col-span-2 md:col-span-1 lg:col-span-1 p-4">
                <div class="p-6 mx-auto my-5 max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                    <% if community.image.attached? %>
                        <img src="<%= url_for(community.image) %>" class="rounded-lg mb-4" />
                    <% end %>
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><a href="#"><%= community.name %></a></h5>
                    <% if @user.communities.select {|c| c.id == community.id }.count == 0 %>
                            <form action="/community/join" method="post">
                                <input type="hidden" name="community_id" value="<%= community.id %>">
                                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"><%= t('join_community') %></button>
                            </form>
                    <% else %>
                            <form action="/community/leave" method="post">
                                <input type="hidden" name="community_id" value="<%= community.id %>">
                                <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800"><%= t('leave_community') %></button>
                            </form>
                    <% end %>
                </div>
            </div>
        <% end %>
</div>

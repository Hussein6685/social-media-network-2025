<h4 class="text-3xl font-bold"><%= @community.name %></h4>
<h2 class="text-xl mb-4"><%= t('members') %>: <%= @community.users.count %> </h2>
<div class="row">
  <div class="col col-md-8">
    <% if @user.communities.select {|c| c.id == @community.id }.count > 0 %>
      <%= render 'shared/create_post', community_id: @community.id %>
      <% @community.posts.each do |post| %>
        <div class="mx-auto my-5 max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
          <%= render 'shared/post_card', post: post, type: "post" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col col-md-4">
    <% @community.users.each do |user| %>
        <div class="p-2 mx-auto my-5 max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
          <div class="flex items-center">
              <% if user.avatar.attached? %>
                  <img src="<%= url_for(user.avatar) %>" class="w-10 h-10 rounded-full inline-block mr-2" />
                  <h3 class="inline-block"><a href="/user/<%= user.id %>"><%= user.username %></a></h3>
              <% else %>
                  <div class="w-10 h-10 rounded-full bg-gray-300 inline-block mr-2"></div>
              <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
